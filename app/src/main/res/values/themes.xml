<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BlindmanTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- This includes several styles, above all the game field background color -->
        <item name="colorPrimary">@android:color/black</item>

        <!-- Same color as game field -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Dialog themes -->
        <item name="dialogTheme">@style/BlindmanDialogTheme</item>
        <item name="android:dialogTheme">@style/BlindmanDialogTheme</item>
        <item name="alertDialogTheme">@style/BlindmanDialogTheme</item>
        <item name="android:alertDialogTheme">@style/BlindmanDialogTheme</item>
    </style>

    <style name="BlindmanDialogTheme" parent="Theme.Material3.Dark.Dialog">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <!-- Same color as menu background -->
        <item name="android:background">?attr/colorSurfaceContainer</item>
    </style>
</resources>
